{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "root": true,
  "rules": {
    "no-console": 0,
    "arrow-body-style": ["error", "always"],
    "indent": ["error", 2],
    "new-cap": [
      "error",
      {
        "properties": false
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-plusplus": 0,
    "no-loop-func": 0,
    "linebreak-style": 0
  }
}
